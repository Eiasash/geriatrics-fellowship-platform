{
  "version": 2,
  "name": "geriatrics-fellowship-platform",
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/dashboard",
      "dest": "/dashboard/index.html"
    },
    {
      "src": "/patient-dashboard",
      "dest": "/patient-dashboard.html"
    },
    {
      "src": "/patient-dashboard-fixed",
      "dest": "/patient-dashboard-fixed.html"
    },
    {
      "src": "/debug",
      "dest": "/comprehensive-debug.html"
    },
    {
      "src": "/test",
      "dest": "/final-test.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/drugs",
      "destination": "/drug-interaction-checker.html",
      "permanent": true
    },
    {
      "source": "/calculators",
      "destination": "/comprehensive-tools.html",
      "permanent": true
    },
    {
      "source": "/emergency",
      "destination": "/oncall-copilot.html",
      "permanent": true
    },
    {
      "source": "/rounds",
      "destination": "/patient-dashboard.html",
      "permanent": true
    },
    {
      "source": "/interactions",
      "destination": "/drug-interaction-checker.html",
      "permanent": true
    },
    {
      "source": "/tools",
      "destination": "/comprehensive-tools.html",
      "permanent": true
    }
  ]
}